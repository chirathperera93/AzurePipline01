<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ayubo.life.ayubolife.lifeplus.ProfileActivity">


    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/userpic">
    </ImageView>
<!--    <ImageView-->
<!--        android:layout_width="22dp"-->
<!--        android:layout_height="22dp"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/img_profile"-->
<!--        app:layout_constraintTop_toTopOf="@+id/img_profile"-->
<!--        android:layout_marginTop="4dp"-->
<!--        android:background="@drawable/edit_btn_profile">-->
<!--    </ImageView>-->
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:text="Jhone Doil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile">
    </TextView>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@+id/txt_name"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name"
        android:background="@drawable/edit_profile_plus">
    </ImageView>

    <TextView
        android:id="@+id/txt_mobilenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/homepage_bottom_menu_textcolor_unselected"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name">
    </TextView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_mobilenumber"
    android:orientation="vertical">



    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lay_payment"
    android:orientation="horizontal"
    android:paddingStart="30dp"
    android:paddingEnd="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_payments"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/payments_lifeplus">
    </ImageView>


    <TextView
        android:id="@+id/txt_payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_payments"
        android:textColor="@color/challenge_list_raw_grey_dark"
        android:fontFamily="@font/roboto_light"
        android:padding="10dp"
        android:textSize="@dimen/text_profile_menu"
        android:text="Payments">

    </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_payments"
            app:layout_constraintLeft_toRightOf="@+id/img_payments"
            android:background="@color/table_cell_border">
        </View>

</android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_lifepoints"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/img_lifepoints"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/life_points_lifeplus">
        </ImageView>


        <TextView
            android:id="@+id/txt_lifepoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_lifepoints"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:padding="10dp"
            android:textSize="@dimen/text_profile_menu"
            android:text=".life points">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_lifepoints"
            app:layout_constraintLeft_toRightOf="@+id/img_lifepoints"
            android:background="@color/table_cell_border">
        </View>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_reports"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/img_reports"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/reports_lifeplus">
        </ImageView>


        <TextView
            android:id="@+id/txt_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_reports"
            android:textColor="@color/challenge_list_raw_grey_dark"
            android:fontFamily="@font/roboto_light"
            android:padding="10dp"
            android:textSize="@dimen/text_profile_menu"
            android:text="Reports">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_reports"
            app:layout_constraintLeft_toRightOf="@+id/img_reports"
            android:background="@color/table_cell_border">
        </View>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_familly"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/img_familly"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/family_lifeplus">
        </ImageView>


        <TextView
            android:id="@+id/txt_familly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_familly"
            android:textColor="@color/challenge_list_raw_grey_dark"
            android:fontFamily="@font/roboto_light"
            android:padding="10dp"
            android:textSize="@dimen/text_profile_menu"
            android:text="Family">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_familly"
            app:layout_constraintLeft_toRightOf="@+id/img_familly"
            android:background="@color/table_cell_border">
        </View>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_subscription"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/img_subscription"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/subscription_lifeplus">
        </ImageView>


        <TextView
            android:id="@+id/txt_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_subscription"
            android:textColor="@color/challenge_list_raw_grey_dark"
            android:fontFamily="@font/roboto_light"
            android:padding="10dp"
            android:textSize="@dimen/text_profile_menu"
            android:text="Subscription">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_subscription"
            app:layout_constraintLeft_toRightOf="@+id/img_subscription"
            android:background="@color/table_cell_border">
        </View>

    </android.support.constraint.ConstraintLayout>





</LinearLayout>


</android.support.constraint.ConstraintLayout>
