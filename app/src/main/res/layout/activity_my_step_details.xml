<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".revamp.v1.activity.MyStepDetailsActivity">

    <RelativeLayout
        android:id="@+id/mainRelativeLayoutForPageClose"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/search_area_shadow"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/mainImageViewForPageClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/arrowRoundBack"
                android:src="@drawable/ionic_md_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Step Details"
                android:textColor="@color/color_3B3B3B"
                android:textSize="24sp" />
        </LinearLayout>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainRelativeLayoutForPageClose"
        android:layout_marginTop="-8dp">


        <TableLayout
            android:id="@+id/tableStepDetailsTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="0dp"
            android:stretchColumns="*" />

    </ScrollView>

</RelativeLayout>