<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dip" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/middleText"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/txt_doctor_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textSize="15dp"
            android:paddingTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="@color/schedlue_cell_desc"
            android:textSize="12dp"
            android:text="Consultant Fee"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/txt_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text=""
            android:layout_weight="1" />
        <TextView
            android:id="@+id/txt_center9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text=""
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_timeslot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="@color/schedlue_cell_desc"
            android:textSize="10dp"
            android:paddingBottom="5dp"
            android:text="" />

    </LinearLayout>
    <!-- Title Of Song-->


    <!-- Rightend Duration -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_contype"
            android:background="@drawable/cal"
            />

    </LinearLayout>


    <!-- Rightend Arrow -->


</RelativeLayout>