<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:padding="2dp">


    <RelativeLayout
        android:id="@+id/layout_for_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp">

        <LinearLayout
            android:id="@+id/image_for_new_chat_receiver_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_for_new_chat_receiver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/receiver_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_for_new_chat_receiver_main"
            android:background="@drawable/new_chat_receiver_drawable"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="60dp"
            android:paddingBottom="8dp"
            android:textColor="@color/color_3B3B3B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time_of_receiver_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/receiver_message"
            android:layout_marginStart="-65dp"
            android:layout_toEndOf="@id/receiver_message"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="0dp"
            android:paddingBottom="8dp"
            android:textColor="@color/color_727272"
            android:textSize="10sp" />


    </RelativeLayout>


</LinearLayout>