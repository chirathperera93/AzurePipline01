<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    android:background="@color/white"
    android:padding="20dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/main_cell_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lay_progressview"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/green_bg_circle"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/circleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/txt_progress_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_black"
                android:text="50%"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/black" />


            <ProgressBar
                android:id="@+id/progressBar_Program_Circle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@drawable/progress_circle_light_green"
                android:indeterminate="false"
                android:progress="0"
                android:progressDrawable="@drawable/circular_green"
                android:secondaryProgress="0" />


        </RelativeLayout>

    </LinearLayout>
        <!--<ImageView-->
            <!--android:id="@+id/img_main_icon"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:scaleType="fitXY"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:text="Engagement level"/>

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/roboto_light"
                android:text="Perform daily tasks to increase levels and earn more rewards"/>



        </LinearLayout>





    </LinearLayout>


</androidx.cardview.widget.CardView>
