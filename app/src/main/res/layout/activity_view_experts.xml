<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".programs.viewexperts.ViewExpertsActivity">

<RelativeLayout
    android:id="@+id/back_layout_Health"
    android:layout_width="60dp"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:gravity="center">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_backBtn_ExpertNewView"
        android:layout_centerInParent="true"
        android:background="@drawable/back_arrow"/>
</RelativeLayout>




    <TextView
        android:id="@+id/txt_activity_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_main_heading_title_normal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:text="Talk to an Expert"
        android:layout_below="@+id/back_layout_Health" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/ask_recycler_viewexp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/txt_activity_heading"/>






<com.ayubo.life.ayubolife.prochat.ui.ProgressAyubo
    android:id="@+id/proDialog_ask"
    style="@style/Widget.AppCompat.ProgressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:visibility="gone"
    android:layout_centerInParent="true"/>
</RelativeLayout>
