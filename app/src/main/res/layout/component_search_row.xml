<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/img_search_row"
                    android:layout_width="60dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_profile_pic" />

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_search_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_cell_title"
                    android:maxLines="2"
                    android:text="@string/dummy_doctor"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/txt_sub_name_search_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/dummy_specialty"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_cell_sub_text" />

            </LinearLayout>


            <ImageView
                android:id="@+id/img_favorite_search_row"
                android:layout_width="@dimen/image_action_button"
                android:layout_height="@dimen/image_action_button"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/title_horizontal_margins"
                android:layout_marginRight="@dimen/title_horizontal_margins"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
