<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_welcome_card_lite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="12dp"
    android:gravity="center"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/welcome_card_main_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="148dp">

            <ImageView
                android:id="@+id/main_background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_bottom_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view"
            android:background="@drawable/bottom_life_plus_rounded_corners"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:paddingEnd="30dp"
            android:paddingBottom="28dp">

            <TextView
                android:id="@+id/main_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Welcome to Walk and Win"
                android:textColor="@color/black"
                android:textSize="21sp" />


            <TextView
                android:id="@+id/main_topic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Letâ€™s make Bangladesh a healthier nation together. Meet your daily, weekly, monthly step targets and stand a chance to win and receive attractive deals."
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>