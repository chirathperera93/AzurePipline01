<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.ayubo.life.ayubolife.activity.WelcomeHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/menu_bg_grey"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_1"
                    android:layout_marginLeft="20dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/searchdoc"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_2"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_1"
                    android:background="@drawable/searchdoc"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_2"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_3"
                    android:background="@drawable/searchdoc"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_3"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_4"
                    android:background="@drawable/searchdoc"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_5"
                    android:background="@drawable/searchdoc"/>


            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fragment_container_9999"
            android:background="@color/schedule_bg"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>
</FrameLayout>
