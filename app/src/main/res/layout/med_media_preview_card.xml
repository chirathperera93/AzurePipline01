<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_background_card"
    android:layout_width="226dp"
    android:layout_height="300dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/trancperent"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardViewForImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:visibility="visible"
        app:cardCornerRadius="18dp">

        <ImageView
            android:id="@+id/media_preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="visible" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardViewForText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp">

        <!--        <ScrollView-->
        <!--            android:id="@+id/scrollViewForTextArea"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:background="@color/white"-->
        <!--            android:fadeScrollbars="false"-->
        <!--            android:padding="8dp">-->

        <TextView
            android:id="@+id/textViewForTextArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:padding="8dp"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. "
            android:textColor="@color/color_3B3B3B"
            android:textSize="10sp" />

        <!--        </ScrollView>-->


    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>