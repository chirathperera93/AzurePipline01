<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="32dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="32dp"
    android:background="@drawable/bg_round"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Select country/region"
            android:textColor="@color/black_light_text"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/countrySearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:drawableEnd="@drawable/discover_search"
            android:ems="10"
            android:hint="Search country/region"
            android:textColor="@color/black"
            android:textColorHint="@color/color_C3C3C3"
            android:textSize="24dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/country_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</RelativeLayout>