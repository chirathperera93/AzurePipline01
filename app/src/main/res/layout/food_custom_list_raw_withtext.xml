        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cell_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </LinearLayout>
</LinearLayout>