<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.ayubo.life.ayubolife.home.RelaxViewActivity">

    <!--Back Menu-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:id="@+id/btn_backImgBtn_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_backImgBtn"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_arrow"/>
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/second_countraw"
        android:layout_height="1sp">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/lvExp"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />


    </LinearLayout>
</LinearLayout>