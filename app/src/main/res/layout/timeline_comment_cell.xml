    <LinearLayout
        android:id="@+id/comment_cell_main_seperator"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="4dp"
        android:background="#ececed">
    </LinearLayout>
</LinearLayout>
