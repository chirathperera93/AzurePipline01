<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.ayubo.life.ayubolife.lifeplus.ProgramBannersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            >
        </ImageView>

        <TextView
            android:id="@+id/txt_banner_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="7dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Medical Screening at your door step"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txt_banner_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="7dp"
            android:fontFamily="@font/roboto_light"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="This is a sample text in a program"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_banner_heading"
            card_view:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/rounded_coners_with_black_bg"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_banner_desc"
            card_view:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/txt_program_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="This is a sample text in a program"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>
