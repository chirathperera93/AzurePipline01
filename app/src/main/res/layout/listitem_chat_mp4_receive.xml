<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:gravity="left"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/thumbContainerMp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_recievechatbouble_blue"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgReceiveMp4Thumbnail"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnPlayReceiveMp4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:layout_alignStart="@+id/thumbContainerMp4"
        android:layout_alignLeft="@+id/thumbContainerMp4"
        android:layout_alignTop="@+id/thumbContainerMp4"
        android:layout_alignEnd="@+id/thumbContainerMp4"
        android:layout_alignRight="@+id/thumbContainerMp4"
        android:layout_alignBottom="@+id/thumbContainerMp4"
        app:srcCompat="@drawable/ic_mp4_play_button" />

    <TextView
        android:id="@+id/txtTimeMp4Receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/chat_text_date"
        android:textColor="@color/chat_text_date"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/thumbContainerMp4"
        android:layout_alignRight="@id/thumbContainerMp4"/>

</RelativeLayout>