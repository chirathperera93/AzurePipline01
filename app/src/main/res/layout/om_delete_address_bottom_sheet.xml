<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_two_rounded_coner_white_view"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Home Address"
        android:textColor="@color/color_3B3B3B"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/delete_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Are you sure you want to delete this address ?"
        android:textColor="@color/color_3B3B3B"
        android:textSize="16sp" />


    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/delete_gradient_rounded_button"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Yes"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_727272"
        android:textSize="14sp" />

</LinearLayout>