<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:background="@drawable/bg_round"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/popup_header_liner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/lifeplus_button_style_without_corner"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/walk_win_subscribe_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="35dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/walk_win_subscribe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/walk_win_daily_subscribe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/you_are_about_to_join_the_daily_walk_win_challenge"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/walk_win_weekly_subscribe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/you_are_about_to_join_the_weekly_walk_win_challenge"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/walk_win_monthly_subscribe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/you_are_about_to_join_the_monthly_walk_win_challenge"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/walk_win_subscribe_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/walk_win_subscribe_title"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text="Would you like to continue?"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/walk_and_win_subscribed_ok_btn"
                        android:layout_width="200dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:background="@drawable/lifeplus_button_style_green"
                        android:fontFamily="@font/roboto_black"
                        android:text="OK"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/walk_and_win_subscribe_not_now_btn"
                        android:layout_width="200dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_coner_disabled_button_bg"
                        android:fontFamily="@font/roboto_black"
                        android:text="Not Now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="24dp" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>