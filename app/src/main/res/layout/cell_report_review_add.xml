<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:id="@+id/layout_main">



    <LinearLayout
        android:layout_width="30dp"
        android:layout_gravity="center_vertical"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/img_selection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/add_report_selectable"/>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/lay_middle_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_selection"
        app:layout_constraintRight_toLeftOf="@+id/btn_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      >

        <TextView
            android:id="@+id/txt_report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="3"
            android:text="Test Test Test Test Test Test Test Test Test Test Test Test Test "
            android:textColor="@color/theme_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_report_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="sdfsdfsdf"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:text="View"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:background="@drawable/report_review_add_button"
      />

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="@color/gery_text"
    app:layout_constraintBottom_toBottomOf="parent"
    />
</LinearLayout>
