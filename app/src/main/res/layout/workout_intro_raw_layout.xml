<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="100"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:id="@+id/btn_introview"
                android:layout_gravity="center"
                android:onClick="click_Workout_One"
                android:scaleType="center"
                android:background="@drawable/run"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="click_Workout_Two"
                android:scaleType="center"
                android:background="@drawable/bedmiton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="click_Workout_Three"
                android:scaleType="center"
                android:background="@drawable/cycling"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="click_Workout_Four"
                android:scaleType="center"
                android:background="@drawable/others_icn"/>
        </LinearLayout>




    </LinearLayout>


