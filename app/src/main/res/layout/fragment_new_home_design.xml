            <LinearLayout
                android:id="@+id/btn_health_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_health_img"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:background="@drawable/health_n" />

                <TextView
                    android:id="@+id/btn_health_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Health"
                    android:textAlignment="center"
                    android:textColor="@color/homepage_bottom_menu_textcolor_unselected"
                    android:textSize="@dimen/homepage_bottom_menu_text_size" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

