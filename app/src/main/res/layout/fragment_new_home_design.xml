                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_relax_img"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:background="@drawable/relax_n" />

                <TextView
                    android:id="@+id/btn_relax_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Relax"
                    android:textAlignment="center"
                    android:textColor="@color/homepage_bottom_menu_textcolor_unselected"
                    android:textSize="@dimen/homepage_bottom_menu_text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_eat5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
