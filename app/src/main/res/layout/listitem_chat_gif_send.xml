<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/sendcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_sendchat_bouble_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSendGifThumbnail"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnPlaySendGif"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/sendcontainer"
        android:layout_alignLeft="@+id/sendcontainer"
        android:layout_alignTop="@+id/sendcontainer"
        android:layout_alignEnd="@+id/sendcontainer"
        android:layout_alignRight="@+id/sendcontainer"
        android:layout_alignBottom="@+id/sendcontainer"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_gif" />

    <TextView
        android:id="@+id/txtTimeGifSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/chat_text_date"
        android:textColor="@color/chat_text_date"
        android:layout_below="@+id/sendcontainer"
        android:layout_alignLeft="@id/sendcontainer"
        android:layout_marginTop="4dp" />
</RelativeLayout>