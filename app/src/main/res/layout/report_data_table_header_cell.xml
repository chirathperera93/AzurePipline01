<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"

    android:background="@color/white">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_in_reports"
                android:textStyle="bold"
                android:textSize="13sp"
                android:fontFamily="sans-serif-black"
                android:text="03"/>
            <TextView
                android:id="@+id/txt_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_in_reports"
                android:textStyle="bold"
                android:textSize="13sp"
                android:fontFamily="sans-serif-black"
                android:text=".."/>
            <TextView
                android:id="@+id/txt_days_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/grey_in_reports"
                android:textSize="13sp"
                android:fontFamily="sans-serif-black"
                android:text=" Jan"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_days_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_in_reports"
            android:textSize="14sp"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="5dp"
            android:text="2018"/>

        <ImageButton
            android:id="@+id/img_btn_download_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_download"/>

        <TextView
            android:id="@+id/txt_report_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:fontFamily="sans-serif-black"
            android:text=""/>

    </LinearLayout>


</LinearLayout>
