<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/report_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/color_4B4C4A"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/report_type_label"
        android:background="@drawable/spinner_bg_for_record"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/report_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:hint="eg : 120"
            android:textColor="@color/black"
            android:textColorHint="@color/color_EAEAEA"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/report_type_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:text="ddd"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </RelativeLayout>


</RelativeLayout>