<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="20dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_author_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/userpic"
        android:layout_margin="8dp">

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@+id/img_author_image"
        app:layout_constraintBottom_toBottomOf="@+id/img_author_image"
        app:layout_constraintLeft_toRightOf="@+id/img_author_image"
        android:orientation="vertical">



    <TextView
        android:id="@+id/txt_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Instructor Name"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14_post"

         />
    <TextView
        android:id="@+id/txt_author_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Instructor"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/text_normal_text_post"
        android:textSize="@dimen/text_14_post"

        /></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>