<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="1920"
tools:context=".goals.SelectGoalCategory_Activity"
android:background="@color/white">

    <!--Back Button -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_menu_height"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_backImgBtn_layout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_backImgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_arrow" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:background="@color/black_transparent_30">

</LinearLayout>

    <!--Heading ............. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/goal_grey_small_text"
            android:textSize="@dimen/goals_header_small_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal category"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/goal_grey_big_text"
            android:textSize="@dimen/goals_header_big_text" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="bottom"
        android:layout_weight="1040">
    <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/health_track_list_new">
    </ListView>

    </LinearLayout>


</LinearLayout>