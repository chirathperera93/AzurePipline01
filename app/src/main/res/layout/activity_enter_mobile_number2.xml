<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/promo_bg"
    tools:context=".payment.activity.EnterMobileNumberActivityPayment">

    <include
        android:id="@+id/lay_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/component_top_back_botton_transperent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


        <LinearLayout
            android:id="@+id/ley_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_back_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:fontFamily="@font/roboto_light"
                android:focusableInTouchMode="true"
                android:textColor="@color/white"
                android:text="@string/enter"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/dialog_number"
                    android:textSize="30sp" />



            </LinearLayout>

        </LinearLayout>

    <EditText
        android:id="@+id/txt_moblie_number_new"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:textSize="22sp"
        android:maxLength="10"
        android:textColor="@color/white"
        android:cursorVisible="true"
        android:focusable="true"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ley_title"
        tools:ignore="Autofill,LabelFor" />

    <LinearLayout
        android:id="@+id/lay_line"
        android:layout_width="200dp"
        android:layout_height="0.2dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_moblie_number_new">

</LinearLayout>

        <ImageButton
            android:id="@+id/img_go_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/todo"
            android:background="@drawable/arrow_send"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_line"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



