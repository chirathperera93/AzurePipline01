<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/default_vertical_double_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_payment_type_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/default_vertical_double_margin"
        android:text="Add cards"/>

     <LinearLayout
         android:id="@+id/lay_card_view"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingStart="@dimen/activity_horizontal_margin"
         android:paddingEnd="@dimen/activity_horizontal_margin"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_payment_type_heading"
         android:orientation="vertical">
     </LinearLayout>

    <ImageView
        android:id="@+id/img_card_addnew"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lay_card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_card_addnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:text="another number"
        android:textColor="@color/bg_main"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_card_addnew"
        app:layout_constraintLeft_toRightOf="@+id/img_card_addnew"
        app:layout_constraintTop_toTopOf="@+id/img_card_addnew" />

</androidx.constraintlayout.widget.ConstraintLayout>
