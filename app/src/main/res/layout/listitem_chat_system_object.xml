<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSystemMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f8e06e"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTimeSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/chat_text_date"
        android:textColor="@color/chat_text_date"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/cardViewSystemMsg"
        app:layout_constraintTop_toBottomOf="@id/cardViewSystemMsg" />
</androidx.constraintlayout.widget.ConstraintLayout>