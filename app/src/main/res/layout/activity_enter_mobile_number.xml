    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/logo_liner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="72dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/enter_mobile_description_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_liner_layout"
                android:layout_marginStart="46dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="46dp">

                <TextView
                    android:id="@+id/enter_mobile_description_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="@string/get_started_description_ayubo_life"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/enter_mobile_number_liner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_mobile_description_linear_layout"
                android:layout_marginTop="52dp"
                android:background="@drawable/blur_background"
                android:orientation="vertical"
                android:paddingTop="18dp"
                android:paddingBottom="36dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/enter_mobile_number"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/only_bottom_line">

                        <ImageView
                            android:id="@+id/selected_country_flag"
                            android:layout_width="42dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/view_country_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/down_arrow"
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/back_btn" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/white" />

                        <EditText
                            android:id="@+id/txt_moblie_number_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/montserrat_thin"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:minWidth="150dp"
                            android:textColorHint="@color/white"
                            android:textSize="26sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:onClick="click_GoWithMobileNumber">

                        <ImageView
                            android:id="@+id/btnNextImageView"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:src="@drawable/new_pin_arrow_right" />

                        <!--                <Button-->
                        <!--                    android:id="@+id/btnNext"-->
                        <!--                    android:layout_width="40dp"-->
                        <!--                    android:layout_height="40dp"-->
                        <!--                    android:background="@drawable/back_white_arrow"-->
                        <!--                    android:gravity="center"-->
                        <!--                    android:onClick="click_GoWithMobileNumber" />-->
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_mobile_number_liner_layout"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>


