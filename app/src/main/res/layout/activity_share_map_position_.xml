<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/white"
android:orientation="vertical"
android:layout_margin="0dp"
android:padding="0dp"
tools:context="com.ayubo.life.ayubolife.map_challenges.ShareMapPosition_Activity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/cha_share_screen"
        android:background="@color/black"
        android:layout_height="0dp"
        android:layout_weight="63">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/main_bg_share_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_margin="0dp" />

            <ProgressBar
                android:id="@+id/progressNewsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                >
            </ProgressBar>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/topLay_one"
                android:padding="15dp">


                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:fontFamily="sans-serif-black"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="20sp"-->
                    <!--android:text="Walk to Kandy"/>-->
                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:background="@drawable/ayubo"/>-->

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/topLay_two">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_location_icon_on_map"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/green_location_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:paddingTop="20dp"
                    android:id="@+id/txt_share_cityName"
                    android:text=""/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:paddingBottom="25dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/topLay_three">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white"
                        android:id="@+id/share_share_completed_steps"
                        android:textSize="23sp"
                        android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lbl_steps_lable"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text=" Steps"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white"
                        android:id="@+id/txt_txt_share_noofDays"
                        android:textSize="23sp"
                        android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:id="@+id/txt_txt_share_Days_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text=" Days"/>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="37"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:text="Share position"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Let people know where you are!"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@color/gray"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:onClick="sharePosition"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="SHARE"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>








</LinearLayout>