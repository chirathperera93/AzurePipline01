<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/recordPrevContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/new_chat_your_text_box"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/btnPlay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_play"
                android:button="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/coloGreen" />

                <TextView
                    android:id="@+id/txtDurationRecieve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTimeRecordReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordPrevContainer"
        android:layout_alignRight="@id/recordPrevContainer"
        android:layout_marginTop="4dp"
        android:textColor="@color/chat_text_date"
        android:textSize="@dimen/chat_text_date" />
</RelativeLayout>