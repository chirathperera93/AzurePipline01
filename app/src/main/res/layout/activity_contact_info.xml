<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:background="@color/color_FCFCFC"
    tools:context=".activity.ContactInfoActivity">




        <LinearLayout
            android:id="@+id/layout_navi"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Back Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_menu_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/btn_backImgBtn_layout"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_back_Button"
                        android:background="@drawable/back_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/second_countraw"
                android:layout_marginBottom="15dp"
                android:layout_height="1sp">
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:text="Hospital Information"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@color/goal_grey_big_text"
        android:textSize="@dimen/text_main_heading_title_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_navi"
        />



    <include
        android:id="@+id/layout_contact_info_wattala"
        layout="@layout/component_contact_info_main_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_horizontal_margins"
        android:layout_marginStart="@dimen/button_horizontal_margins"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_heading"
        app:layout_constraintVertical_chainStyle="packed" />

    <include
        android:id="@+id/layout_contact_info_thalawathugoda"
        layout="@layout/component_contact_info_main_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_horizontal_margins"
        android:layout_marginStart="@dimen/button_horizontal_margins"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_contact_info_wattala"
        app:layout_constraintVertical_chainStyle="packed" />


    <include
        android:id="@+id/layout_contact_info_phone"
        layout="@layout/component_contact_info_sub_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_horizontal_margins"
        android:layout_marginStart="@dimen/button_horizontal_margins"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_contact_info_thalawathugoda"
        app:layout_constraintVertical_chainStyle="packed" />

    <include
        android:id="@+id/layout_contact_info_email"
        layout="@layout/component_contact_info_sub_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_horizontal_margins"
        android:layout_marginStart="@dimen/button_horizontal_margins"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_contact_info_phone"
        app:layout_constraintVertical_chainStyle="packed" />


    <include
        android:id="@+id/layout_contact_info_web"
        layout="@layout/component_contact_info_sub_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_horizontal_margins"
        android:layout_marginStart="@dimen/button_horizontal_margins"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_contact_info_email"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>