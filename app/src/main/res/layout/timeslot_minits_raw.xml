<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bg_minits_cell">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/cell_background_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/lbl_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:textColor="#343434"
            android:textSize="10sp"
            android:text="3.55pm - 4.00pm" />
        <TextView
            android:id="@+id/lbl_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="10sp"
            android:text="3.55pm - 4.00pm" />
    </LinearLayout>

    <LinearLayout android:id="@+id/appointment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/cell_background_view"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="15dp">
        <TextView
            android:id="@+id/lbl_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#343434"
            android:textSize="10sp"
            android:text="Appointment" />

        </LinearLayout>
    <LinearLayout android:id="@+id/tn1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="15dp">
        <ImageView
            android:id="@+id/lbl_bbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#343434"
            android:textSize="10sp"
           android:background="@drawable/close_xx" />

    </LinearLayout>
</RelativeLayout>
    </LinearLayout>
    <!-- Rightend Arrow -->


</LinearLayout>