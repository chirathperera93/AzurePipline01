<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <gradient android:angle="-90" android:endColor="@color/color_727272" android:startColor="@color/color_727272" />
        </shape>

    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <gradient android:angle="-90" android:endColor="@color/color_727272" android:startColor="@color/color_727272" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <gradient android:angle="-90" android:endColor="@color/color_3B3B3B" android:startColor="@color/color_727272" />
        </shape>
    </item>
</selector>